= form_for @product,builder: BootstrapFormBuilder do |f|
  = f.errors
  = f.text_field :name
  %small Precio en centimos de euro
  = f.text_field :pricing
  = f.file_field :avatar
  = f.text_area :description
  = f.label :Categoria
  - @subcategories.each do |subcategory|
    = check_box_tag "product[subcategory_id]", subcategory.id
    =subcategory.name
    =subcategory.category.name
  = f.submit "Enviar"
