<div style="margin-top:2em" class="col-md-12 col-xs-10 margin-auto center-block kostic" >

      <div class="col-md-2 ">
        <h3 class="text-center black white-text large-padding">Últimas entradas</h3>
        <% @articles.each do |article| %>
            <div class="card white top-space">

              <div class="visibilidad relative "> <%=image_tag article.cover.url(:medium), class: "img-thumbnail"  %></div>
              <div class="grey-text small normal-padding">   <%=  Sanitize.fragment(article.text, Sanitize::Config::RELAXED).truncate(100).html_safe%>  </div>
                <%= link_to 'Ver', article ,class:"btn-success large-padding medium" %>
                 <span class="large-padding"> <%= article.created_at.strftime("%d-%m-%y") %></span>

          </div>
      <%end%>

      </div>
      <div class="col-md-7">
        <h3 class="text-center black white-text large-padding"> Los más vendidos </h3>
        <% @products.each do |product| %>
          <div class="col-md-2 ">

              <div class="visibilidad relative "> <%= image_tag product.avatar.url(:medium), class: "img-thumbnail" %></div>
              <p class="large-padding green-text bold altura "> <%= product.name %></p>

                    <p ><span class="medium bold green-text"> <%= product.pricing %>€ </span><%= link_to 'Comprar', product ,class:"green white-text large-padding small radius" %></p>
              <!-- <p class="large-padding"> <%= product.created_at.strftime("%A %y-%m-%d") %></p> -->

              <p class="large-padding "> <%= truncate(product.description, length:20) %></p>

        </div>
          <%end%>





        <article class="card">

            <section>
                <div class="display-block float-left large-padding">  <%=image_tag @article.cover.url(:medium) %></div>
                <div class="display-block float-left large-padding"><h3 class="grey-text "> <%=link_to @article.title, @article %></h2>
                <span class="normal">     <%=  Sanitize.fragment(@article.text, Sanitize::Config::RELAXED).truncate(1100).html_safe%></span>

                </div>

            </section>

        </article>













        </div>
      <div class="col-md-2 ">


      </div>
</div>

