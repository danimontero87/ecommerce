<!DOCTYPE html>
<html>
<head>
  <title>Ecommerce</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= render "partials/nav" %>

  <div style="<%= "display:none;" if notice.nil? %>">
    <p class="notice alert alert-dismissible alert-info"><%= notice %></p>

  </div>
  <div style="<%= "display:none;" if alert.nil? %>">

      <p class="alert alert-dismissible alert-danger"><%= alert %></p>
  </div>
<div class="no-float center-block">

<%= yield %>
</div>
</body>
</html>
