<!DOCTYPE html>
<html>
<head>
  <title>SoloGaming</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
  <script src='http://npmcdn.com/isotope-layout@3/dist/isotope.pkgd.js'></script>

  <%= csrf_meta_tags %>
</head>
<body >


<%= render "partials/nav" %>

  <div style="<%= "display:none;" if notice.nil? %>">
    <p class="notice alert alert-dismissible alert-info"><%= notice %></p>

  </div>
  <div style="<%= "display:none;" if alert.nil? %>">

      <p class="alert alert-dismissible alert-danger"><%= alert %></p>
  </div>


<%= yield %>

</body>
</html>
